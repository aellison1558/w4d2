<form action = <%= my_action %> method="Post" >
  <input type='hidden' name="_method" value=<%= my_method %>>

  <label>Cat</label>
  <select name="cat_rental_request[cat_id]">
    <% @cats.each do |cat| %>
    <option value=<%= cat.id %> <%= 'selected' if cat.id == @cat_rental_request.cat_id%> > <%= cat.name %></option>
    <% end %>
  </select>
  <br>

  <label>Start Date</label>
  <input type="date" name="cat_rental_request[start_date]" value=<%= @cat_rental_request.start_date %>>
  <br>

  <label>End Date</label>
  <input type="date" name="cat_rental_request[end_date]" value=<%= @cat_rental_request.end_date %>>
  <br>

  <input type="submit" value=" <%= submit_name %> ">
</form>
